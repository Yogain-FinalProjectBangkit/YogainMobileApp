<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="239dp"
            android:layout_height="172dp"
            android:src="@drawable/top_main"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_pose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tree_poses"
        style="@style/titleMedium"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cv_item_post"
        app:layout_constraintStart_toStartOf="@id/cv_item_post"
        android:layout_marginTop="@dimen/dimen_16dp"
        />

    <TextView
        android:id="@+id/tv_number_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five_mins"
        style="@style/bodySmall"
        android:textColor="@color/md_theme_light_secondary"
        app:layout_constraintTop_toBottomOf="@id/tv_name_pose"
        app:layout_constraintStart_toStartOf="@id/tv_name_pose"
        android:layout_marginTop="@dimen/dimen_8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>